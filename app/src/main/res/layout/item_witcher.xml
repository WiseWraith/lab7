<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_margin="5dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_witcher"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/witcher"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/witcher" />

            <TextView
                android:id="@+id/game3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="24sp"
                android:lines="1"
                android:text="@string/witcher"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/witcher"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descriptionWitcher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-black"
                android:lines="2"
                android:text="@string/witcher_description"
                android:textColor="#0B0707"
                android:textSize="14sp"
                android:typeface="serif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/witcher"
                app:layout_constraintTop_toBottomOf="@+id/game3" />

            <TextView
                android:id="@+id/genreWitcher"
                android:layout_width="244dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="28dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-black"
                android:lines="2"
                android:text="@string/genre2"
                android:textColor="#0B0707"
                android:textSize="14sp"
                android:typeface="serif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/witcher"
                app:layout_constraintTop_toBottomOf="@+id/descriptionWitcher"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button2"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#786D28"
                android:text="@string/comment"
                app:icon="@drawable/ic_comment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.095"
                app:layout_constraintStart_toEndOf="@+id/divider11"
                app:layout_constraintTop_toBottomOf="@+id/genreWitcher" />

            <View
                android:id="@+id/divider4"
                android:layout_width="407dp"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider6"
                android:layout_width="240dp"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/genreWitcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/witcher"
                app:layout_constraintTop_toBottomOf="@+id/descriptionWitcher" />

            <View
                android:id="@+id/divider9"
                android:layout_width="240dp"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="2dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/descriptionWitcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/witcher"
                app:layout_constraintTop_toBottomOf="@+id/game3" />

            <View
                android:id="@+id/divider11"
                android:layout_width="1dp"
                android:layout_height="148dp"
                android:layout_marginEnd="4dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/descriptionWitcher"
                app:layout_constraintStart_toEndOf="@+id/witcher"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>